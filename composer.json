{
    "name": "cms-sederhana/cms",
    "description": "A simple Content Management System built with PHP and AdminLTE",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "almasaeed2010/adminlte": "^3.2",
        "components/jquery": "^3.6",
        "twbs/bootstrap": "^4.6",
        "fortawesome/font-awesome": "^4.7",
        "summernote/summernote": "^0.8.8"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"if (!is_dir('public/plugins')) { mkdir('public/plugins', 0777, true); }\"",
            "php -r \"if (!is_dir('public/dist')) { mkdir('public/dist', 0777, true); }\"",
            "php -r \"if (!is_dir('public/dist/css')) { mkdir('public/dist/css', 0777, true); }\"",
            "php -r \"if (!is_dir('public/dist/js')) { mkdir('public/dist/js', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/jquery')) { mkdir('public/plugins/jquery', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/bootstrap/js')) { mkdir('public/plugins/bootstrap/js', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/bootstrap/css')) { mkdir('public/plugins/bootstrap/css', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/fontawesome-free/css')) { mkdir('public/plugins/fontawesome-free/css', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/fontawesome-free/fonts')) { mkdir('public/plugins/fontawesome-free/fonts', 0777, true); }\"",
            "php -r \"if (!is_dir('public/plugins/summernote')) { mkdir('public/plugins/summernote', 0777, true); }\"",
            "php -r \"copy('vendor/almasaeed2010/adminlte/dist/css/adminlte.min.css', 'public/dist/css/adminlte.min.css');\"",
            "php -r \"copy('vendor/almasaeed2010/adminlte/dist/js/adminlte.min.js', 'public/dist/js/adminlte.min.js');\"",
            "php -r \"copy('vendor/components/jquery/jquery.min.js', 'public/plugins/jquery/jquery.min.js');\"",
            "php -r \"copy('vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js', 'public/plugins/bootstrap/js/bootstrap.bundle.min.js');\"",
            "php -r \"copy('vendor/twbs/bootstrap/dist/css/bootstrap.min.css', 'public/plugins/bootstrap/css/bootstrap.min.css');\"",
            "php -r \"foreach(glob('vendor/fortawesome/font-awesome/css/*') as $file) { copy($file, 'public/plugins/fontawesome-free/css/' . basename($file)); }\"",
            "php -r \"foreach(glob('vendor/fortawesome/font-awesome/fonts/*') as $file) { copy($file, 'public/plugins/fontawesome-free/fonts/' . basename($file)); }\"",
            "php -r \"foreach(glob('vendor/summernote/summernote/dist/*') as $file) { if(is_file($file)) { copy($file, 'public/plugins/summernote/' . basename($file)); } else { mkdir('public/plugins/summernote/' . basename($file), 0777, true); foreach(glob($file . '/*') as $subfile) { copy($subfile, 'public/plugins/summernote/' . basename($file) . '/' . basename($subfile)); } } }\""
        ]
    }
} 